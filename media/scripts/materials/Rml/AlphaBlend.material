//-----------------------------------------------------------------------------
// GLSL shaders
fragment_program Rml/AlphaBlend_ps_GLSL glsl
{
	source GLSL/AlphaBlend_ps.glsl
	default_params
	{
		param_named dstTex int 0
		param_named srcTex int 1
	}
}

fragment_program Rml/AlphaBlend_ps_VK glslvk
{
	source GLSL/AlphaBlend_ps.glsl
}

// HLSL shaders
fragment_program Rml/AlphaBlend_ps_HLSL hlsl
{
	source HLSL/AlphaBlend_ps.hlsl
	entry_point main
	target ps_5_0 ps_4_0 ps_4_0_level_9_1 ps_4_0_level_9_3
}


fragment_program Rml/AlphaBlend_ps unified
{
	delegate Rml/AlphaBlend_ps_HLSL
	delegate Rml/AlphaBlend_ps_GLSL
	delegate Rml/AlphaBlend_ps_VK
}

// Material definition
material Rml/AlphaBlend
{
	technique
	{
		pass
		{
			depth_check off
			depth_write off

			cull_hardware none

			vertex_program_ref Ogre/Compositor/Quad_vs
			{
			}

			fragment_program_ref Rml/AlphaBlend_ps
			{
			}

			texture_unit dstTex
			{
				filtering			none
				tex_address_mode	clamp
			}

			texture_unit srcTex
			{
				filtering			none
				tex_address_mode	clamp
			}
		}
	}
}
